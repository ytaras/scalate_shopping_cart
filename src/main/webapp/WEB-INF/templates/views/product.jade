-import com.softserve.cart.model._
-@ val product: Product
- attributes("title") = "Product: " + product.name

h3 Description
= product.description
h3 Price
\$#{product.price}
hr
form(method="Post" action="/shopping-cart" class="form-inline")
  fieldset
    label Amount
    input(type="text" name="amount" class="input-mini")
    input(type="hidden" name="productId" value="#{product.id}")
    button(type="submit" class="btn btn-primary") Add to shoping cart

